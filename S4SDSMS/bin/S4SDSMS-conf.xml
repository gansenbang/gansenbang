	<bean id="maxItemPartitioner" class="org.apache.s4.dispatcher.partitioner.DefaultPartitioner">
		<property name="streamNames">
			<list>
				<value>MaxItem</value>
			</list>
		</property>
		<property name="hashKey">
			<list>
				<value>maxItem</value>
			</list>
		</property>
		<property name="hasher" ref="hasher" />
		<property name="debug" value="true" />
	</bean>

</beans>
