			<list>
				<value>TopKItem</value>
			</list>
		</property>
		<property name="hashKey">
			<list>
				<value>topKItem</value>
			</list>
		</property>
		<property name="hasher" ref="hasher" />
		<property name="debug" value="true" />
	</bean>
